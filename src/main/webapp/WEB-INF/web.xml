        <servlet-class>
            com.jdbc.application.servlets.SubscriptionServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriptionServlet</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>





    <filter>
        <filter-name>ValidRegDataFilter</filter-name>
        <filter-class>
            com.jdbc.application.filters.ValidRegDataFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidRegDataFilter</filter-name>
        <url-pattern>/createUser</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CreateUserFilter</filter-name>
        <filter-class>
            com.jdbc.application.filters.UserMatchFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CreateUserFilter</filter-name>
        <url-pattern>/createUser</url-pattern>
    </filter-mapping>
   <filter>
        <filter-name>FormEncodedFilter</filter-name>
        <filter-class>
            com.jdbc.application.filters.FormEncodedFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FormEncodedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.jdbc.application.listeners.LogListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.jdbc.application.listeners.SessionAttributeListener</listener-class>
    </listener>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <welcome-file-list>
        <welcome-file>Main.jsp</welcome-file>
    </welcome-file-list>

</web-app>